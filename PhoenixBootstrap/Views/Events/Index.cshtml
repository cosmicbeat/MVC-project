@using WebGrease.Css.Extensions

@model IEnumerable<Phoenix.Models.Events>

@{
    ViewBag.Title = "Home";
}

<h2> Phoenix Inspire</h2>

@*<p>
    @Html.ActionLink("Create New", "Create");
</p>*@
<table class="table">
    <tr>
        <th>
            Author           
        </th>
        <th>
            Title            
        </th>
        <th>
            Description
        </th>
        <th>
            Date 
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePublic)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id, @class = "btn btn-default" }) |
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id, @class = "btn btn-default" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, @class = "btn btn-default" })*@
            </td>
        </tr>
    }


</table>
